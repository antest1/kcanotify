<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lab_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/lab_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lab_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="6-1 第一基地航空隊"
                android:textColor="@color/white"
                android:textSize="@dimen/popup_text_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lab_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0"
                    android:background="@color/colorLabsStatusSortie"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="退避"
                    android:textColor="@color/white"
                    android:textSize="@dimen/popup_text_large" />

                <TextView
                    android:id="@+id/lab_fp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0"
                    android:background="@color/colorLabsStatusFP"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="FP 237"
                    android:textColor="@color/white"
                    android:textSize="@dimen/popup_text_large" />

                <TextView
                    android:id="@+id/lab_dist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0"
                    android:background="@color/colorLabsStatusDist"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="DIST 7"
                    android:textColor="@color/white"
                    android:textSize="@dimen/popup_text_large" />

            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4">

            <LinearLayout
                android:id="@+id/lab_plane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/lab_icon1"
                    android:layout_width="@dimen/popup_item_icon_size_large"
                    android:layout_height="@dimen/popup_item_icon_size_large"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    android:maxWidth="@dimen/popup_item_icon_size_large"
                    android:maxHeight="@dimen/popup_item_icon_size_large"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/item_0"
                    app:srcCompat="@mipmap/item_0" />

                <ImageView
                    android:id="@+id/lab_icon2"
                    android:layout_width="@dimen/popup_item_icon_size_large"
                    android:layout_height="@dimen/popup_item_icon_size_large"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    android:maxWidth="@dimen/popup_item_icon_size_large"
                    android:maxHeight="@dimen/popup_item_icon_size_large"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/item_0"
                    app:srcCompat="@mipmap/item_0" />

                <ImageView
                    android:id="@+id/lab_icon3"
                    android:layout_width="@dimen/popup_item_icon_size_large"
                    android:layout_height="@dimen/popup_item_icon_size_large"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    android:maxWidth="@dimen/popup_item_icon_size_large"
                    android:maxHeight="@dimen/popup_item_icon_size_large"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/item_0"
                    app:srcCompat="@mipmap/item_0" />

                <ImageView
                    android:id="@+id/lab_icon4"
                    android:layout_width="@dimen/popup_item_icon_size_large"
                    android:layout_height="@dimen/popup_item_icon_size_large"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    android:maxWidth="@dimen/popup_item_icon_size_large"
                    android:maxHeight="@dimen/popup_item_icon_size_large"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/item_0"
                    app:srcCompat="@mipmap/item_0" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>
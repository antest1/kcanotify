<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/reslog_data_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/reslog_chart_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/reslog_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/reslog_chart_filter_box_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/reslog_chart_filter_0_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:checked="false"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:text="@string/item_fuel"
                    android:textSize="14dp"
                    android:translationX="-5dp"
                    app:buttonTint="@color/colorResourceFuel" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/reslog_chart_filter_0_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:checked="false"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:text="@string/item_ammo"
                    android:textSize="14dp"
                    android:translationX="-5dp"
                    app:buttonTint="@color/colorResourceAmmo" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/reslog_chart_filter_0_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:checked="false"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:text="@string/item_stel"
                    android:textSize="14dp"
                    android:translationX="-5dp"
                    app:buttonTint="@color/colorResourceSteel" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/reslog_chart_filter_0_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:checked="false"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:text="@string/item_baux"
                    android:textSize="14dp"
                    android:translationX="-5dp"
                    app:buttonTint="@color/colorResourceBauxite" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reslog_chart_filter_box_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">


                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/reslog_chart_filter_1_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:checked="false"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:text="@string/item_bgtz"
                    android:textSize="12dp"
                    android:translationX="-5dp"
                    app:buttonTint="@color/colorConsumableBucket" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/reslog_chart_filter_1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:checked="false"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:text="@string/item_brnr"
                    android:textSize="12dp"
                    android:translationX="-5dp"
                    app:buttonTint="@color/colorConsumableTorch" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/reslog_chart_filter_1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:checked="false"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:text="@string/item_mmat"
                    android:textSize="12dp"
                    android:translationX="-5dp"
                    app:buttonTint="@color/colorConsumableDevmat" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/reslog_chart_filter_1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:checked="false"
                    android:scaleX="0.75"
                    android:scaleY="0.75"
                    android:text="@string/item_kmat"
                    android:textSize="12dp"
                    android:translationX="-5dp"
                    app:buttonTint="@color/colorConsumableScrew" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/reslog_item_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reslog_item_label_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/reslog_item_label_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/reslog_item_label_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/reslog_item_label_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="4"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/reslog_item_label_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:text="5"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </LinearLayout>

            <ListView
                android:id="@+id/reslog_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:listSelector="@android:color/transparent" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.antest1.kcanotify.MainActivity">
    <LinearLayout
        android:id="@+id/layout_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextColor="@color/colorToolbarText" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="6dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin">

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleGroup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_main_btn_size_top"
                    android:layout_marginBottom="6dp"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/vpnbtn"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="3dp"
                        android:layout_weight="1"
                        android:stateListAnimator="@null"
                        android:text="@string/ma_vpn_toggleoff"
                        android:textSize="@dimen/activity_main_btn_textsize" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/svcbtn"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp"
                        android:layout_weight="1"
                        android:stateListAnimator="@null"
                        android:text="@string/ma_svc_toggleoff"
                        android:textSize="@dimen/activity_main_btn_textsize" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    >

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:id="@+id/kcafairybtn"
                        style="?attr/materialIconButtonFilledStyle"
                        android:backgroundTint="@color/colorFairyShowBtn"
                        app:icon="@mipmap/noti_icon_0"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        android:stateListAnimator="@null">
                    </com.google.android.material.button.MaterialButton>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/kcatoolbtn"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        style="?attr/materialIconButtonFilledStyle"
                        android:backgroundTint="@color/colorToolsBtn"
                        app:icon="@mipmap/ic_dashboard"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/kcafairybtn"
                        app:layout_constraintDimensionRatio="1:1"
                        android:stateListAnimator="@null">
                    </com.google.android.material.button.MaterialButton>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/controls"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/textSpecial2"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right|end"
                        android:adjustViewBounds="true"
                        android:alpha="0.5"
                        android:cropToPadding="false"
                        android:src="@mipmap/_background"
                        app:srcCompat="@mipmap/_background" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textMainWarn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/colorPanelWarning"
                    android:maxLines="8"
                    android:minHeight="84dp"
                    android:padding="4dp"
                    android:scrollbars="vertical"
                    android:text="화면 오버레이가 설정되지 않았습니다."
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textMainUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_above="@id/textMainWarn"
                    android:layout_alignParentBottom="false"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/colorMainBtn"
                    android:gravity="center_vertical|center_horizontal"
                    android:minLines="4"
                    android:padding="4dp"
                    android:text="@string/setting_menu_kand_title_game_data_down"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textMaintenance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_above="@id/textMainUpdate"
                    android:layout_alignParentBottom="false"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/colorDataUpdate"
                    android:gravity="center_vertical|center_horizontal"
                    android:minLines="2"
                    android:padding="4dp"
                    android:text="Next Maintenance:\n%s"
                    android:textAlignment="center"
                    android:textColor="@color/colorDataUpdateText"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textSpecial"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_above="@id/textMaintenance"
                    android:layout_alignParentBottom="false"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/colorSpecial"
                    android:gravity="center_vertical|center_horizontal"
                    android:minLines="4"
                    android:padding="4dp"
                    android:text="Special Text"
                    android:textAlignment="center"
                    android:textColor="@color/colorSpecialText"
                    android:textSize="14dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textSpecial2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_above="@id/textSpecial"
                    android:layout_alignParentBottom="false"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/colorUpdate"
                    android:gravity="center_vertical|center_horizontal"
                    android:minLines="4"
                    android:padding="4dp"
                    android:text="@string/notification_message"
                    android:textAlignment="center"
                    android:textColor="@color/colorUpdateText"
                    android:textSize="14dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/textSpecial2"
                    android:text="TextView"
                    android:textColor="@color/colorActivityText"
                    android:textSize="@dimen/activity_text_size" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/bottomSheet"
        style="@style/Widget.Material3.BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        tools:visibility="invisible">
        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/kcbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_anchorGravity="top|end"
        app:layout_anchor="@+id/bottomSheet"
        android:text="Game Start"
        app:icon="@android:drawable/ic_media_play"/>

    <ImageView
        android:id="@+id/special_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#A0000000"
        android:padding="20dp"
        android:src="@mipmap/special_image"
        android:visibility="gone"
        app:srcCompat="@mipmap/special_image" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.antest1.kcanotify.MainActivity">
    <LinearLayout
        android:id="@+id/layout_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="80dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextColor="@color/colorToolbarText" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin">

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/vpnbtn"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="1"
                        android:stateListAnimator="@null"
                        android:text="@string/ma_vpn_toggleoff"
                        android:textSize="@dimen/activity_main_btn_textsize" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/svcbtn"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="1"
                        android:stateListAnimator="@null"
                        android:text="@string/ma_svc_toggleoff"
                        android:textSize="@dimen/activity_main_btn_textsize" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/controls"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/textSpecial2"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right|end"
                        android:adjustViewBounds="true"
                        android:alpha="0.5"
                        android:cropToPadding="false"
                        android:src="@mipmap/_background"
                        app:srcCompat="@mipmap/_background" />
                </LinearLayout>


                <TextView
                    android:id="@+id/textMaintenance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_above="@id/textMainUpdate"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="6dp"
                    android:background="@color/colorDataUpdate"
                    android:gravity="center_vertical|center_horizontal"
                    android:minLines="2"
                    android:padding="4dp"
                    android:text="Next Maintenance:\n%s"
                    android:textAlignment="center"
                    android:textColor="@color/colorDataUpdateText"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/textMainUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="@color/colorMainBtn"
                    android:text="@string/setting_menu_kand_title_game_data_down"
                    app:icon="@android:drawable/stat_sys_download" />

                <Button
                    android:id="@+id/textSpecial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/textMaintenance"
                    android:backgroundTint="@color/colorSpecial"
                    android:text="@string/special_message"
                    android:textColor="@color/colorSpecialText"
                    app:icon="@android:drawable/ic_menu_gallery"
                    app:iconTint="@color/colorSpecialText" />

                <Button
                    android:id="@+id/textSpecial2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/textSpecial"
                    android:backgroundTint="@color/colorUpdate"
                    android:text="@string/notification_message"
                    android:textColor="@color/colorUpdateText"
                    app:icon="@android:drawable/ic_dialog_info"
                    app:iconTint="@color/colorUpdateText" />

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/textSpecial2"
                    android:text="TextView"
                    android:textColor="@color/colorActivityText"
                    android:textSize="@dimen/activity_text_size" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        style="@style/Widget.Material3.BottomAppBar"
        app:menu="@menu/bottom_app_bar"
        />

    <!--<FrameLayout
        android:id="@+id/bottomSheet"
        style="@style/Widget.Material3.BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        tools:visibility="gone">
        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>-->

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/kcbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:text="GAME START"
        app:icon="@android:drawable/ic_media_play"/>

    <ImageView
        android:id="@+id/special_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#A0000000"
        android:padding="20dp"
        android:src="@mipmap/special_image"
        android:visibility="gone"
        tools:visibility="gone"
        app:srcCompat="@mipmap/special_image" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.antest1.kcanotify.DraggableOverlayButtonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignStart="@id/viewbutton"
        android:layout_alignEnd="@id/viewbutton"
        android:layout_alignTop="@id/viewbutton"
        android:layout_alignBottom="@id/viewbutton"/>

    <ImageView
        android:id="@+id/viewbutton"
        android:layout_width="@dimen/button_size_normal"
        android:layout_height="@dimen/button_size_normal"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/noti_icon_0" />


</com.antest1.kcanotify.DraggableOverlayButtonLayout>

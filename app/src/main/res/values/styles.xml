<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Button.Custom</item>
        <item name="colorButtonNormal">@color/colorBtn</item>
        <item name="colorSecondaryContainer">@color/colorBtn</item>
        <item name="colorPrimaryContainer">@color/colorAccent</item>
        <item name="colorPrimaryInverse">@color/colorAccent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.Material3.Dark.NoActionBar">
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="TextAppearance.AppCompat.Button.Custom">
        <item name="android:textColor">@color/colorBtnText</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="OverlayButton" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="android:backgroundTint">#10D6D6D6</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">#CDD6D6D6</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/white</item>
    </style>
</resources>
